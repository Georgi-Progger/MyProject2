@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@using ProdASP.Models
@model Country

<form asp-controller="Place" asp-action="CreateRepublic" method="post" >
	<div class="mb-3">
		<label class="form-label">Название республики</label>
		<input type="text" class="form-control" name="NamePlace">
	</div>
	<div class="mb-3">
		<label class="form-label">Язык республики</label>
		<input type="text" class="form-control" name="Language">
	</div>
	<div class="mb-3">
		<label class="form-label">В какой стране</label>
		<select asp-for="Id" name="CountryName" class="form-control" asp-items="ViewBag.Id"></select>
	</div>
	<br />
	<input type="submit" value="Загрузить" />
</form>